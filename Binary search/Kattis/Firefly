#include<bits/stdc++.h>

using namespace std;
typedef long long ll;

void getDiv(int n, vector<int> &div) {
    for (int i = 1; i * i <= n; ++i)
        if (n % i == 0) {
            div.push_back(i);
            if (i != n / i)
                div.push_back(n / i);
        }
}

int main() {
    ios_base::sync_with_stdio(false);
    cin.tie(0);
    cout.tie(0);

    int n, h, val, mn = INT_MAX, cnt = 0;
    vector<int> a, b, ans;
    cin >> n >> h;
    for (int i = 0; i < n; ++i) {
        cin >> val;
        if (i & 1)
            b.push_back(val);
        else
            a.push_back(val);
    }
    sort(a.begin(), a.end());
    sort(b.begin(), b.end());
    for (int i = 1; i <= h; ++i) {
        int first = a.size() - (lower_bound(a.begin(), a.end(), i) - a.begin());
        int second = b.size() - (lower_bound(b.begin(), b.end(), h - i + 1) - b.begin());
        ans.push_back(first + second);
    }
    for (auto a : ans) {
        if (a < mn)
            mn = a, cnt = 0;
        if (a == mn)
            ++cnt;
    }
    cout << mn << " " << cnt;
    return 0;
}
